# Signal API Configuration
SIGNAL_API_URL=http://localhost:8080
SIGNAL_PHONE_NUMBER=+1234567890
# Group ID for chat bridging (optional - without it only DM commands work)
# Get this from: curl 'http://localhost:8080/v1/groups/+YOURNUMBER' - use the "id" field
SIGNAL_GROUP_ID=group.YOUR_GROUP_ID_HERE

# FRM (Ficsit Remote Monitoring) API Configuration
FRM_API_URL=http://localhost:8082
FRM_ACCESS_TOKEN=your-frm-access-token

# Dedicated Server API (optional - for /session command)
SERVER_API_URL=https://your.server.com:7777
SERVER_API_TOKEN=your-api-token

# Bot Configuration
POLL_INTERVAL=2.0
LOG_LEVEL=INFO
BOT_NAME=SignalBot

# Server Connection Info (for /connect command)
SERVER_HOST=your.server.com
SERVER_PORT=7777
SERVER_PASSWORD=yourpassword
